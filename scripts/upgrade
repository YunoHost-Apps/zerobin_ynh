#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Upgrading source files..."

if ynh_compare_current_package_version --comparison lt --version "1.7.1~ynh1"; then
    ynh_script_progression --message="Moving data..." --weight=3
    mv $install_dir/data/* $data_dir/
fi

ynh_script_progression --message="Upgrading source files..." --weight=3

ynh_setup_source --dest_dir="$install_dir" --full_replace

ynh_script_progression --message="Upgrading config file..." --weight=1

ynh_add_config --template="conf.php" --destination="$install_dir/cfg/conf.php"

#=================================================
# REAPPLY SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression "Upgrading system configurations related to $app..."

ynh_config_add_phpfpm

ynh_config_add_nginx

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Upgrade of $app completed"
